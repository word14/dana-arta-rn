{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "node": true
  },
  "plugins": [
    "babel",
    "node"
  ],
  "rules": {
    "no-console": 0,
    "no-unused-vars": 1,
    "no-mixed-spaces-and-tabs": 0,
    "no-cond-assign": 0,
    "no-undef": 0,
    "no-empty": 0,
    "space-before-blocks": 2,
    "keyword-spacing": [
      2, 
      {
        "overrides": {
          "if": { "after": false },
          "for": { "after": false },
          "while": { "after": false },
          "switch": { "after": false },
          "throw": { "after": false },
          "catch": { "after": false }
        }
      }
    ],
    "arrow-spacing": 2,
    "space-infix-ops": 2,
    "key-spacing": [2, { "beforeColon": true , "mode": "minimum"}],
    "comma-spacing": 2,
    "array-bracket-spacing": [2, "always"],
    "object-curly-spacing": [2, "always"],
    "quotes": 2,
    "jsx-quotes": 2,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "brace-style": [2, "1tbs"],
    "comma-dangle": [2, "never"],
    "quote-props": [2, "as-needed"],
    "node/no-missing-import": 0,
    "react/display-name": 0,
    "semi": 2
  }
}